<entry>
	<title>@title</title>
	<id>tag:@domain_name,@current_year:/@permalink</id>
	<updated>@updated</updated>
	<link rel="alternate" type="text/html" href="http://@base_url/@permalink" />
	<author>
		<name>@name</name>
		<uri>http://@base_url/</uri> 
	</author>
	<content type="html" xml:base="http://@base_url/" xml:lang="en">
		<![CDATA[
		if @excerpt do @excerpt endif
		... <a href="http://@base_url/@permalink"><small>FULL VERSION</small></a>
		]]>
	</content>
</entry>
